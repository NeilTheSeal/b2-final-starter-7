<%= render partial: "shared/nav" %>

<div class="two-column">
  <div class="column-header">
    Coupons for <%= @merchant.name %>
  </div>
  <div class="column-button">
    <%= link_to "New Coupon", new_merchant_coupon_path(merchant_id: @merchant.id) %>
  </div>
</div>

<div class="mr-auto">
  <div id="coupon-list">
    <% @merchant.coupons.each do |coupon| %>
      <div id="coupon-<%= coupon.id %>" class="coupon-list-item">
        <div class="coupon-list-item-header"><%= link_to coupon.name, merchant_coupon_path(merchant_id: @merchant.id, id: coupon.id) %></div>
        <ul>
          <li>Coupon Code: <%= coupon.code %></li>
          <li>Discount: <%= coupon.display_discount %></li>
          <li>Status: <%= coupon.status %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>